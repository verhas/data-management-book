*{:style=>(attr :style), :name=>(attr :name), :caption=>(attr :caption)}
- case @style
- when "NOTE"
  - if blocks.length > 0
    - blocks.each_with_index do |block, index|
      text:p text:style-name="Information_20_Box_20_5b_PACKT_5d_"
        =block.content
  - else
    text:p text:style-name="Information_20_Box_20_5b_PACKT_5d_"
      =content

- when "TIP"
  - if blocks.length > 0
    - blocks.each_with_index do |block, index|
      text:p text:style-name="Tip_20_5b_PACKT_5d_"
        =block.content
  - else
      text:p text:style-name="Tip_20_5b_PACKT_5d_"
        =content

- when "WARNING", "CAUTION"
  - if blocks.length > 0
    - blocks.each_with_index do |block, index|
      text:p text:style-name="Information_20_Box_20_5b_PACKT_5d_"
        text:span text:style-name="Italics_20_5b_PACKT_5d_"
          =block.content
  - else
    text:p text:style-name="Information_20_Box_20_5b_PACKT_5d_"
      text:span text:style-name="Italics_20_5b_PACKT_5d_"
        =content

- when "IMPORTANT"
  - if blocks.length > 0
    text:p text:style-name="P_20_-_20_Callout_20_Heading"
      | Important note
    - blocks.each_with_index do |block, index|
      text:p text:style-name="Tip_20_5b_PACKT_5d_"
          =block.content
  - else
    text:p text:style-name="P_20_-_20_Callout_20_Heading"
      | Important note
    text:p text:style-name="Tip_20_5b_PACKT_5d_"
        =content
